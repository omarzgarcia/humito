azul       = #22BCE0
rojo       = #CC0202
rojo-hover = lighten(#CC0202, 40%)
naranja    = #BA1517

//Jalamaos la URL del font de los servidores de Google
@import url(http://fonts.googleapis.com/css?family=Overlock);

h1
h2
h3
p	
	font-family 'Overlock', cursive

header
	background rojo
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	height 23px
	padding 0.8em
	position relative	

	.logo		
		img			
			border-radius 0.8em
			width 100px			
nav	
	position relative
	z-index 10
	top -0.5em	

	.menu			
		float right
		height 100px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		z-index 4

		li			
			background naranja
			border-bottom none
			border-radius 0.6em 0.6em 0 0
			box-shadow 3.5px 2.5px 0 rgba(50,110,100,0.6)
			display inline-block
			a				
				color white
				display block
				font-size 12px
				padding 0.2em
				text-decoration none
				text-align center
				white-space normal

				&:hover
					background rojo-hover
					border-radius 0.6em 0.6em 0 0
					color white
.principal	
	position absolute
	.info	
		margin-top -4em
		.banner1
		.banner2
		.banner3
			display inline-block
			margin 0.2em 0.2em 0.2em 0.2em
			padding 0.4em
			position relative
		.banner1
			h1		
				margin 0		
				font-size 22px
			p
				font-size 16px
		.banner2		
			img
				width 80%
		.banner3
			h2
				font-size 22px
			p
				font-size 16px				


@media screen and (min-width: 768px)
	.principal	
		.info
			border solid 5px red
			margin-top 6em
			.banner1
			.banner2
			.banner3
				border solid 5px red
				display inline-block
				margin 1.3em 0.2em 2.5em 0.2em
				padding 0.7em
				position relative
				width 30%
			.banner2		
				img
					width 80%				